" misc
syntax enable
set number
set showmatch
let python_highlight_all = 1

" formatting
set autoindent
set noexpandtab
" set smarttab
set tabstop=4
set shiftwidth=4
set softtabstop=4

set backspace=2

" key mapping
map <Space> <Leader>

ino jj <esc>
cno jj <c-c>

nmap <S-Enter> O<Esc>
nmap <CR> o<Esc>
